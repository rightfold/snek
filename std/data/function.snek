(let (
  #! Return the value argument.
  id (fn [t *] (fn (x t) x))

  #! Return the first value argument.
  const (fn [t *, u *] (fn (x t, _ u) x))

  #! Function composition.
  compose (fn [a *, b *, c *]
            (fn (f (-> b c), g (-> a b), x a)
              (f (g x))))
) {id id, const const, compose compose})
